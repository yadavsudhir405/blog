
<%= form_for(@article) do |f| %>
    <% if @article.errors.any? %>

        <h2>
          <% pluralize( @article.errors.count,'errors') %>
          prohibited from being saved
        </h2>
        <ul>
          <% @article.errors.full_messages.each do |message|  %>
              <li><%= message %></li>
          <%  end %>
        </ul>


    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>