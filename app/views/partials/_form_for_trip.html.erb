<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<%= form_for(@trip) do |f| %>

    <% if @trip.errors.any?  %>
        <h2>
          <% pluralize( @trip.errors.count,'errors') %>
          prohibited from being saved
        </h2>
        <ul>
          <% @trip.errors.full_messages.each do |message|  %>
              <li><%= message %></li>
          <%  end %>
        </ul>

    <% end %>

    <div class= "form-group">
      <%= f.label :traveller,:class=> "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :traveller, :class => "form-control " %>
      </div>
    </div>

    <div class= "form-group">
      <%= f.label :from,:class=> "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :from, :class => "form-control " %>
      </div>
    </div>

    <div class= "form-group">
      <%= f.label :to,:class=> "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :to ,:class =>"form-control" %>
      </div>
    </div>

    <div class= "form-group">
      <%= f.label :amount,:class=> "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :amount,:class =>"form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :class=>"btn btn-default"%>
      </div>
    </div>
<% end %>