
<%= form_for(@article) do |f| %>
    <% if @article.errors.any? %>

        <h2>
          <% pluralize( @article.errors.count,'errors') %>
          prohibited from being saved
        </h2>
        <ul>
          <% @article.errors.full_messages.each do |message|  %>
              <li><%= message %></li>
          <%  end %>
        </ul>


    <% end %>

    <div class="form-group">
      <%= f.label :title, :class=> "control-label col-sm-2" %>
      <div class="col-sm-10">
          <%= f.text_field :title , :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :text, :class=> "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_area :text, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class=" row col-xs-offset-6 col-sm-offset-6 col-sm-offset-20">
          <%= f.submit "Save" ,:class=>"btn btn-lg btn-primary"%>
        </div>
      </div>
    </div>
<% end %>